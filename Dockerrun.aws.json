{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "chriscasano/fib-app-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "chriscasano/fib-app-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "workder",
      "image": "chriscasano/fib-app-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "chriscasano/fib-app-nginx",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client, server"]
    }
  ]
}
